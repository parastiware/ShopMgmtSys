@model List<Shop>
@{
    ViewData["Title"] = "List";
}

<h1>All Shops (@Model.Count)</h1>
<table class="table background-dark">
  <thead class="thead-light">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Email Address</th>
      <th scope="col">Registration No.</th>
        <th scope="col">Address</th>
      
    </tr>
  </thead>
  <tbody>
    @{int i=0;}
     @foreach (var shop in Model)
     {
       <tr scope ="row">
         <td>@(++i)</td>
         
        <td><a href="/employee/detail?Id=@shop.Id">@shop.Name</a></td>
         
         <td>@shop.EmailAddress</td>
         <td>@shop.RegistrationNumber</td>
         <td>@shop.Address</td>
       </tr>
         
     }
  </tbody>
</table>
